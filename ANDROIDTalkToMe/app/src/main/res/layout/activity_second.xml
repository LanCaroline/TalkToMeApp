<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/body_container"
    android:background="@color/card_1"
    tools:context=".SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/signOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24">

        </ImageButton>
        <ImageButton
            android:id="@+id/bandeira"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textVoice"
            android:layout_marginEnd="10dp"
            android:src="@drawable/bandeira" />

        <TextView
            android:id="@+id/textVoice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@+id/signOutBtn"
            android:text="Toque no microfone ou digite algo">

        </TextView>

        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_below="@+id/textVoice"
            android:layout_gravity="center" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textView"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Digite para traduzir">

        </EditText>

        <ImageButton
            android:id="@+id/voiceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:layout_toEndOf="@+id/textView"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_baseline_mic_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:elevation="2dp"
            app:menu="@menu/menu"
            android:background="@drawable/round_corner"
            app:itemRippleColor="@android:color/transparent"
            app:itemIconSize="30dp"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@drawable/item_seletor"
            android:id="@+id/bottom_navigation"
            />

    </RelativeLayout>

</LinearLayout>